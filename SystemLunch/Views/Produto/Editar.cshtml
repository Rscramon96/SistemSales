@model SystemBeauty.ViewModels.ProdutoVM

@{
    ViewData["Title"] = "Editar";
}

<h2>@Model.Nome</h2>

<hr />
<div class="row">
    <div class="col-xl-12">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            
            <div class="row justify-content-center">
                <div class="col-4">
                    <img src="@Model.ImageURL" class="img-thumbnail" alt="Imagem" />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ImageURL" class="control-label"></label>
                <input asp-for="ImageURL" class="form-control" />
                <span asp-validation-for="ImageURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageThumbNailURL" class="control-label"></label>
                <input asp-for="ImageThumbNailURL" class="form-control" />
                <span asp-validation-for="ImageThumbNailURL" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="form-group col-3">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group col-3">
                    <label asp-for="CategoriaID" class="control-label"></label>
                    <select asp-for="CategoriaID" class="form-control" asp-items="ViewBag.CategoriaID"></select>
                    <span asp-validation-for="CategoriaID" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="QtdEstoque" class="control-label"></label>
                    <input asp-for="QtdEstoque" class="form-control" />
                    <span asp-validation-for="QtdEstoque" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="Preco" class="control-label"></label>
                    <input asp-for="Preco" class="form-control" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="VolumeEmbalagem" class="control-label"></label>
                    <input asp-for="VolumeEmbalagem" class="form-control" />
                    <span asp-validation-for="VolumeEmbalagem" class="text-danger"></span>
                </div>
            </div>
            <div>
                <div class="form-group">
                    <label asp-for="DescricaoProduto" class="control-label"></label>
                    <textarea input asp-for="DescricaoProduto" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="DescricaoProduto" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-lg-4 col-sm-4">

                    <div class="form-group">
                        <label asp-for="DescricaoCurta" class="control-label"></label>
                        <textarea input asp-for="DescricaoCurta" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="DescricaoCurta" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ModoUso" class="control-label"></label>
                        <textarea input asp-for="ModoUso" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="ModoUso" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4 col-lg-4 col-sm-4">
                    <div class="form-group">
                        <label asp-for="DescricaoAdicional" class="control-label"></label>
                        <textarea input asp-for="DescricaoAdicional" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="DescricaoAdicional" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AcaoBeneficio" class="control-label"></label>
                        <textarea input asp-for="AcaoBeneficio" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="AcaoBeneficio" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4 col-lg-4 col-sm-4">
                    <div class="form-group">
                        <label asp-for="Composicao" class="control-label"></label>
                        <textarea input asp-for="Composicao" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Composicao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Indicacao" class="control-label"></label>
                        <textarea input asp-for="Indicacao" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Indicacao" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" /> |
                <a asp-action="Lista" class="btn btn-dark">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
