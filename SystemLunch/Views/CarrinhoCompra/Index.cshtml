@model CarrinhoCompraVM

<div class="row checkoutForm">

    <img src="~/images/Full-Cart-icon.png" />
    <div>
        <h4> Seu carrinho de compras : </h4>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Quantidade</th>
                <th>Produto</th>
                <th class="text-right">Preço</th>
                <th class="text-right">Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CarrinhoCompraItens)
            {
                <tr>
                    <td class="text-center">@item.Quantidade</td>
                    <td class="text-left">@item.Produto.Nome</td>
                    <td class="text-right">@item.Produto.Preco.ToString("c")</td>
                    <td class="text-right">
                        @((item.Quantidade * item.Produto.Preco).ToString("c"))
                    </td>
                    <td class="text-center">
                        <a asp-controller="CarrinhoCompra" asp-action="RemoverItemCarrinho" asp-route-ID="@item.Produto.ID"><img src="~/images/delete.png" /></a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total:</td>
                <td class="text-right">
                    @Model.Total.ToString("c")
                </td>
            </tr>
        </tfoot>
    </table>

    <div class="text-right">
        <div class="btn-group ">
            <a class="btn btn-success" asp-controller="Pedido" asp-action="Checkout" asp-route-CarrinhoCompraID="@Model.CarrinhoCompraID">Encerrar Pedido</a>
        </div>
    </div>
</div>

