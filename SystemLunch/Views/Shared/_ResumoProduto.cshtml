@model ProdutoVM

<div class="col-sm-3 col-lg-3 col-md-3">
    <div class="img-thumbnail">
        <a asp-action="Detalhes" asp-route-id="@Model.ID" asp-controller="Produto">
            <img src="@Model.ImageURL" class="img-thumbnail" alt="Imagem" />
        </a>
    </div>
    <div class="caption">
        <h5>@Model.Nome</h5>
        <h5 class="pull-righ">Por: @Model.Preco.ToString("c")</h5>
    </div>
</div>