@model ProdutoVM

<div class="col-sm-3 col-lg-3 col-md-3">
    <div class="img-thumbnail">
        <a asp-action="Detalhes" asp-route-id="@Model.ID" asp-controller="Produto">
            <img src="@Model.ImageURL" class="img-thumbnail" alt="Imagem" />
        </a>
    </div>
    <div class="figure-caption">
        <h6>@Model.Nome</h6>
        <h6 class="pull-righ">Por: @Model.Preco.ToString("c")</h6>
        <a asp-action="AddItemCarrinho" asp-route-ID="@Model.ID" asp-controller="CarrinhoCompra" class="btn btn-primary">Adiocionar ao Carrinho</a>
    </div>
</div>